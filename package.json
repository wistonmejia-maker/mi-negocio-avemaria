{
  "name": "mi-negocio-avemaria",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "description": "Mi Negocio AVEMARÍA — App de gestión para distribuidora de accesorios",
  "workspaces": [
    "apps/web",
    "apps/mobile",
    "backend"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=backend & npm run dev --workspace=apps/web",
    "dev:web": "npm run dev --workspace=apps/web",
    "dev:backend": "npm run dev --workspace=backend",
    "dev:mobile": "npm run start --workspace=apps/mobile",
    "lint": "eslint . --ext .ts,.tsx --ignore-path .gitignore",
    "format": "prettier --write \"**/*.{ts,tsx,json,css,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,json,css,md}\""
  },
  "dependencies": {
    "@prisma/client": "^5.12.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.57.0",
    "prettier": "^3.2.0",
    "prisma": "^5.12.0",
    "typescript": "^5.4.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}